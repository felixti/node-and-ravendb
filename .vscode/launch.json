    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "nodemon",
            "program": "${workspaceFolder}/node_modules/nodemon/bin/nodemon.js",
            "args": ["${workspaceRoot}/src/index.js", "--config ${workspaceRoot}/nodemon-debug.json"],
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via NPM",
            "runtimeExecutable": "yarn",
            "restart": true,
            "runtimeArgs": [
                "debug"
            ],
            "port": 9229
        }
    ]
}